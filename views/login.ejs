<%- include('uses/header'); -%>

<div class="contain p-2 mt-5" style="width: 25%; font-size: 15px;">
      <h3 class="text-center alert alert-primary">SignIn</h3>

      <form action="/login" method="post">

        
        <div style="display: flex; margin-bottom: 5px; ">
          <label for="username" style="flex:5">Username: </label>
          <input type="text" name="username" id="username" style="flex:5">
        </div>

        <div style="display: flex; margin-bottom: 5px;">
          <label for="pass" style="flex:5">Password: </label>
          <input type="text" name="pass" id="pass" style="flex:5">
        </div>

        <p class="text-center"><button type="submit" class="text-center btn btn-outline-primary text-center"> Sign In</button> </p> 
        
      </form>
      <p class="text-center">No account? <a href="/signup"><button class="btn btn-outline-secondary">Create New</button></a> </p>

    
  </div>
  
<%- include('uses/footer'); -%>