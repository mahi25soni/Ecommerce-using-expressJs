<%- include('uses/header'); -%>
 
<div class="contain p-2 mt-5" style="width: 25%; font-size: 15px;">
      <h3 class="text-center alert alert-primary">SignUp</h3>

      <form action="/signup" method="post">

        <div style="display: flex; margin-bottom: 5px; ">
          <label for="username" style="flex:5">Username: </label>
          <input type="text" name="username" id="username" style="flex:5">
        </div>
        <div style="display: flex; margin-bottom: 5px;">
        
          <label for="email"  style="flex:5">Email: </label>
          <input type="email" name="email" id="email" style="flex:5">
        </div>
        <div style="display: flex; margin-bottom: 5px;">
        
          <label for="pass" style="flex:5">Password: </label>
          <input type="text" name="pass" id="pass" style="flex:5">
        </div>
        <div style="display: flex; margin-bottom: 5px;">
          <label for="pass" style="flex:5">Confirm: </label>
          <input type="text" name="pass2" id="pass" style="flex:5">
        </div>
        <p class="text-center"><button type="submit" class="  text-center btn btn-outline-primary text-center">Sign Up</button> </p> 
    </form>

    
  </div>
  
<%- include('uses/footer'); -%>